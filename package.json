{
  "name": "chillscape",
  "version": "1.1.0",
  "private": true,
  "main": "public/electron.js",
  "author": "Ridel Saavedra Flores",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.8",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.5",
    "formik": "^2.4.6",
    "idb": "^8.0.1",
    "jwt-decode": "^4.0.0",
    "query-string": "^9.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-loader-advanced": "^1.7.1",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "react-toastify": "^8.2.0",
    "sass": "^1.48.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.1.2",
    "web-vitals": "^2.1.3",
    "yup": "^1.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack-build": "yarn build && electron-builder build --win -c.extraMetadata.main=build/electron.js --publish never",
    "electron-pack-deploy": "yarn build && electron-builder build --win -c.extraMetadata.main=build/electron.js --publish always",
    "preelectron-pack": "yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "wait-on": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cosmo-frameworks/chillscape"
  },
  "build": {
    "appId": "com.ridelsaavedraflores.chillscape",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "build/favicon.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "installerIcon": "build/favicon.png"
    }
  }
}
